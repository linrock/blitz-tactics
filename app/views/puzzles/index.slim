.puzzle-page.container
  = "#{@puzzles.count} puzzles"

  .puzzles
    - @puzzles.each_with_index do |puzzle, i|
      div(data-puzzle-id="#{puzzle.id}")
        = linked_puzzle_miniboard(puzzle)
        .puzzle-info
          .puzzle-num= i + 1
          .puzzle-mistake-info
    - if @puzzles.count % 3 == 2
      .blank
    - elsif @puzzles.count % 3 == 1
      .blank
      .blank
